# Firebase Configuration
# Get these values from your Firebase Console: https://console.firebase.google.com/
# Project Settings > General > Your apps > Web app config

NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Admin Setup Page
# Set to 'true' to completely disable the admin setup page at /admin/setup
# The setup page will automatically disable itself once an admin exists
# NEXT_PUBLIC_DISABLE_SETUP_PAGE=false

# Resend Email Configuration
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Contact Form Email
# The email address where contact form submissions will be sent
CONTACT_EMAIL=your-email@example.com

# Resend From Email (Optional)
# The email address to send from (must be verified in Resend)
# If not set, defaults to onboarding@resend.dev (for testing only)
# RESEND_FROM_EMAIL=noreply@yourdomain.com

